---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.title }}</title>
  <link href="{{ site.url }}{{ site.baseurl }}/general_feed.xml" rel="self"/>
  <link href="{{ site.url }}{{ site.baseurl }}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/</id>
  <author>
    <name>{{ site.author }}</name>
    <email>{{ site.email }}</email>
  </author>

  {% for post in site.posts %}
    <entry>
      <title>{{ post.title }}</title>
      <link href="{{ site.url }}{{ site.baseurl }}{{ post.url }}"/>
      <updated>{{ post.real-date | date_to_xmlschema }}</updated>
      <id>{{ site.url }}{{ site.baseurl }}{{ post.id }}</id>
      <content type="html">{{ post.content | after_hr | xml_escape }}</content>
      {% for file in post.audio %}
        {% if post.filesize %}
          <link rel="enclosure" 
                type="{{ file.first | mime_type }}" 
                length="{{ post.filesize[file.first] }}" 
                href="{{ file.last | prepend: '/episodes/' | absolute_url }}"/> 
        {% else %}
          <link rel="enclosure" 
                type="{{ file.first | mime_type }}" 
                length="{{ file.last | file_size }}" 
                href="{{ file.last | prepend: '/episodes/' | absolute_url }}"/>    
        {% endif %}
      {% endfor %}
      {{ site | flattr_atom:post }}
    </entry>
  {% endfor %}
</feed>